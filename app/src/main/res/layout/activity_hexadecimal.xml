<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hexadecimal"
    android:orientation="vertical"
    android:background="#AEE2FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/decimalbtn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="(10)"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="#AEE2FF"
            />

        <Button
            android:id="@+id/binaryBtn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="(2)"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="#AEE2FF" />

        <Button
            android:id="@+id/octalBtn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="(8)"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="#AEE2FF"
            />
        <Button
            android:id="@+id/hexabtn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="(16)"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="#AEE2FF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:background="#AEE2FF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:paddingTop="7dp"
                android:text="Hex. : "
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/HexaDecimal_editText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:hint=" Enter Hexa-Decimal"
                android:inputType="textCapCharacters"
                android:shadowColor="@color/black"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:paddingTop="7dp"
                android:text="Decimal : "
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/Decimal_editText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:inputType="number"
                android:shadowColor="@color/black"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:paddingTop="7dp"
                android:text="Octal : "
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/Octal_editText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:inputType="number"
                android:shadowColor="@color/black"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/binaryLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:paddingTop="7dp"
                android:text="Binary : "
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/Binary_editText"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:inputType="number"
                android:shadowColor="@color/black"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>